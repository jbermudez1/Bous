	script(async='', defer='', src='https://maps.googleapis.com/maps/api/js?key=AIzaSyAI8ziDmHx8V9RXAgUuyaO0WicjvJ3gJZY&callback=initMap')
	script.
		// This example displays a marker at the center of Australia.
		// When the user clicks the marker, an info window opens.
		function initMap() {
		var uluru = {lat: 19.4251783, lng: -99.1628892};
		var map = new google.maps.Map(document.getElementById('map'), {
		zoom: 12,
		center: uluru
		});
		var contentString = '<div id="content">'+
		'<h4 id="firstHeading" class="firstHeading">BOUS</h4>'+
		'<div id="bodyContent">'+
		'<p><b>Havre 77,</b> Juárez 06600, Ciudad de México, CDMX' +

		'</div>'+
		'</div>';
		var infowindow = new google.maps.InfoWindow({
		content: contentString
		});
		var marker = new google.maps.Marker({
		position: uluru,
		map: map,
		title: 'Uluru (Ayers Rock)'
		});
		marker.addListener('click', function() {
		infowindow.open(map, marker);
		});
		}
